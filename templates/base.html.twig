  </li>
  <li class="nav-item">
    <a class="nav-tabs" href="{{ path('student_list')}}">Student</a>
  </li>
  <li class="nav-item">
    <a class="nav-tabs" href="{{ path('teacher_list')}}">Teacher</a>
  </li>
  <li class="nav-item">
    <a class="nav-tabs" href="{{ path('app_logout')}}">Logout</a>
  </li>
</ul>
</div>
        {% endblock %}
        {% block body %}{% endblock %}
    </body>
