{% extends "base.html.twig" %}
{% block title %} Update student{% endblock %}
{% block body %}
 <div class="container-fluid mt-3">
 <h2 class="text-center mt-2">Update student</h2>
    <div class="col-md-6"></div>
 {{ form_start (form) }}

        <div class="form-group">
          {{ form_label (form.NameStudent) }}
          {{ form_widget (form.NameStudent, {'attr': {'class':'form-control'}}) }}
        </div>
        <div class="form-group">
          {{ form_label (form.Address) }}
          {{ form_widget (form.Address, {'attr': {'class':'form-control'}}) }}
        </div>
        <div class="form-group">
          {{ form_label (form.Email) }}
          {{ form_widget (form.Email, {'attr': {'class':'form-control'}}) }}
        </div>
         <div class="form-group">
          {{ form_label (form.Birthday) }}
          {{ form_widget (form.Birthday, {'attr': {'class':'form-control'}}) }}
        </div>
         <div class="form-group">
          {{ form_label (form.PhoneNumber) }}
          {{ form_widget (form.PhoneNumber, {'attr': {'class':'form-control'}}) }}
        </div>
        <div class="form-group">
           {{ form_label (form.Photo) }}
          {{ form_widget (form.Photo, {'attr': {'class':'form-control'}}) }}
        </div>
        <div class="form-group">
          {{ form_label (form.Classroom) }}
          {{ form_widget (form.Classroom, {'attr': {'class':'form-control'}}) }}
        </div>

        <div class="form-group">
        <button class="btn btn-primary text-center">Update</button>
        </div>

 {{ form_end (form) }}
     
 </div>
{% endblock %}