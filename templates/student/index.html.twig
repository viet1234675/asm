{% extends 'base.html.twig' %}

{% block title %}Student Infomation{% endblock %}

{% block body %}
<div class="container mt-3">
{% for flash in app.flashes("Success") %}
<p class="alert alert-primary">{{flash}}</p>
{% endfor %}
 {% for flash in app.flashes("Error") %}
        <p class="alert alert-primary"> {{ flash }} </p>
 {% endfor %}

</div>

<div class="container-fluid">
 <a class="btn btn-primary" href="{{path('student_create')}}">Create Student</a>
 <table class="table">
 	<thead>
 		<tr>
 			<th scope="col">Student ID</th>
 			<th scope="col">Student Name</th>
 			<th scope="col">Actions</th>
 		</tr>
 	</thead>
 	<tbody>
     {% for student in students %}
         
 		<tr>
 			<td scope="row">{{student.id}}</td>
 			<td scope="row">{{student.namestudent}}</td>
 			<td scope="row">
             <a class="btn btn-info" href="{{path('student_detail',{'id': student.id})}}">Detail</a>
            <a class="btn btn-info" href="{{path('student_update',{'id': student.id})}}">Update</a>
             <a class="btn btn-info" href="{{path('student_delete',{'id': student.id})}}">Delete</a>
             </td>
             
 		</tr>
     {% endfor %}
 	</tbody>
 </table>
</div>
{% endblock %}

